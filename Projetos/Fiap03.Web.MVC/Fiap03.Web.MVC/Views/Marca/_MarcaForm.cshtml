@model Fiap03.Web.MVC.Models.MarcaModel

@* LISTA TODOS OS ERROS DE VALIDAÇÃO QUE OCORRERAM *@
@* @Html.ValidationSummary() *@

<div class="row">
    <div class="form-group col-4">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome,
        new
        {
            placeholder = "Ex: BMW",
            @class = "form-control",
            autocomplete = "off"
        })
        @Html.ValidationMessageFor(c => c.Nome)
    </div>
    <div class="form-group col-4">
        @Html.LabelFor(d => d.DataCriacao)
        @Html.TextBoxFor(d => d.DataCriacao,
        "{0:dd/MM/yyyy}",
    new
    {
        placeholder = "Ex: " + DateTime.Now.ToShortDateString(),
        @class = "form-control",
        autocomplete = "off"
    })
        @Html.ValidationMessageFor(c => c.DataCriacao)
    </div>
    <div class="form-group col-4">
        @Html.LabelFor(c => c.Cnpj)
        @Html.TextBoxFor(c => c.Cnpj,
        new
        {
            placeholder = "Ex: 12.345.678/1234-56",
            @class = "form-control",
            autocomplete = "off"
        })
        @Html.ValidationMessageFor(c => c.Cnpj)
    </div>
</div>