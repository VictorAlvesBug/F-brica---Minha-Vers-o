<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Carros - CRUD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="../Usuario/Cadastrar">Registrar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../Usuario/Login">Login</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Carros
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Listar", "Listar", "Carro", null, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Cadastrar", "Cadastrar", "Carro", null, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Marcas
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Listar", "Listar", "Marca", null, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Cadastrar", "Cadastrar", "Marca", null, new { @class = "dropdown-item" })
                    </div>
                </li>
            </ul>
            @if (!User.Identity.IsAuthenticated)
            {
                <form class="form-inline my-2 my-lg-0" action="/Usuario/Login" method="post">
                    <input class="form-control mr-sm-2" name="login" type="text" placeholder="Login" />
                    <input class="form-control mr-sm-2" name="senha" type="password" placeholder="Senha" />
                    <button class="btn btn-outline-success my-sm-0" type="submit">Entrar</button>
                </form>
            }
            else
            {
                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#logoutModal">
                    Sair
                </button>
            }
        </div>
    </nav>

    <div class="container body-content">
        <br />
        <br />
        <br />
        @RenderBody()


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/inputmask/inputmask.js"></script>
    <script src="~/Scripts/inputmask/jquery.inputmask.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Área para as paginas adicionarem scripts -->
    @RenderSection("scripts", false)

    <!-- Modal Logout -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Deseja excluir esta marca?</p>
                </div>
                <div class="modal-footer">
                    <!-- FORMULÁRIO URL: /Carro/Excluir - POST -->
                    @using (Html.BeginForm("Logout", "Usuario"))
                    {
                        <!-- CAMPO PARA O ID -->
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Sair</button>
                        <!-- QUANDO USAMOS O TYPE=SUBMIT ELE ENVIA OS DADOS DO FORMULARIO PARA O ENDEREÇO ESPECIFICADO -->
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
